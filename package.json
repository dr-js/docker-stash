{
  "private": true,
  "name": "docker-stash",
  "version": "0.3.1-dev.3",
  "description": "A collection of strange functions, for development",
  "author": "dr-js",
  "license": "MIT",
  "repository": "github:dr-js/docker-stash",
  "scripts": {
    "// repo ========================": "",
    "version-bump": "dr-dev --version-bump-git-branch --git-commit --debug",
    "tag-push": "dr-dev --shell-alias quick-git-push-combo",
    "// build =======================": "",
    "build-debian11": "node source/debian11/build.js build-layer.js",
    "build-debian11-cn": "node source/debian11/build.js build-layer.js CN",
    "build-proxy": "dr-dev --EE \"HTTP_PROXY=${npm_config_proxy-http://127.0.0.1:1080}&HTTPS_PROXY=${npm_config_https_proxy-http://127.0.0.1:1080}&NO_PROXY=127.0.0.1,localhost\" -E --",
    "build-debian11-cn-proxy": "npm run build-proxy -- dr-dev --rsl build-debian11-cn",
    "build-debian11-dev-core-proxy": "npm run build-proxy -- node source/debian11/build-core.js",
    "build-debian11-dev-core-cn-proxy": "npm run build-proxy -- node source/debian11/build-core.js CN",
    "build-debian11-dev-layer-cn-proxy": "npm run build-proxy -- node source/debian11/build-layer.js ruby CN",
    "// push ========================": "",
    "push-debian11-all": "node source/debian11/push.js ALL",
    "push-debian11-manifest-all": "node source/debian11/push-manifest.js ALL",
    "// docker ======================": "",
    "docker-pre-pull-buildkit": "sudo docker image pull \"$(node -p \"require('./source/function.js').BUILDKIT_SYNTAX\")\"",
    "docker-pre-pull-binfmt": "sudo docker image pull tonistiigi/binfmt",
    "docker-setup-binfmt": "sudo docker run --privileged --rm tonistiigi/binfmt --install amd64,arm64",
    "docker-clear-binfmt": "sudo docker run --privileged --rm tonistiigi/binfmt --uninstall qemu-*",
    "docker-test-binfmt": "sudo docker buildx ls && sudo docker run --rm --platform=linux/amd64 amd64/alpine uname -m && sudo docker run --rm --platform=linux/arm64 arm64v8/alpine uname -m",
    "docker-prune": "node source/docker-prune.js",
    "docker-ls": "node source/docker-ls.js",
    "// =============================": "",
    "fix-script-filemode": "bash -c '(shopt -s globstar && chmod --changes +x source/**/*.sh && ls -al source/**/*.sh)'",
    "lint": "eslint ./source/",
    "test": "npm run lint",
    "prepack": "echo \"Error: do not pack this package\" && exit 1"
  },
  "engines": {
    "node": ">=16.13",
    "npm": ">=8.3"
  },
  "devDependencies": {
    "@dr-js/core": "^0.5.0-dev.3",
    "@dr-js/dev": "^0.5.0-dev.2",
    "@dr-js/dev-eslint": "^0.5.0-dev.2"
  }
}
